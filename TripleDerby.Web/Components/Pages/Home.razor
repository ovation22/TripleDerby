@page "/"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

@using Microsoft.FluentUI.AspNetCore.Components.Emojis.AnimalsNature.Color
@using TripleDerby.Web.Components.Widgets
@using TripleDerby.Web.Components.Shared
@using TripleDerby.Web.Icons

<PageTitle>Triple Derby - Admin</PageTitle>

<FluentGrid style="padding-top: 10px;" >
    <FluentGridItem xs="12" sm="6" md="4">
        <FluentCard Height="100px;">
            <FluentNavLink Href="horses">
                <FluentLabel Typo="Typography.H2">
                    <FluentEmoji Value="@(new Default.Horse())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Horses</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6" md="4">
        <FluentCard Height="100px;">
            <FluentNavLink Href="users">
                <FluentLabel Typo="Typography.H2">
                    <FluentEmoji Value="@(new Emojis.PeopleBody.Color.Default.Person())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Users</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="12" md="4">
        <FluentCard Height="100px;">
            <FluentNavLink Underline="Underline.None" Href="breeding">
                <FluentLabel Typo="Typography.H2">
                    <FluentEmoji Value="@(new Emojis.TravelPlaces.Color.Default.HouseWithGarden())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Breeding</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6">
        <FluentGrid>
            <FluentGridItem xs="12">
                <FluentCard Height="156px;">
                    <ErrorBoundary>
                        <ChildContent>
                            <HorseGenderStats Title="Genders" />
                        </ChildContent>
                        <ErrorContent>
                            <ErrorWidget ErrorMessage="An unexpected error occurred in the Gender Stats widget." />
                        </ErrorContent>
                    </ErrorBoundary>
                </FluentCard>
            </FluentGridItem>
            <FluentGridItem xs="12">
                <FluentGrid>
                    <FluentGridItem xs="12" sm="6" md="6">
                        <FluentCard Height="270px;">
                            <ErrorBoundary>
                                <ChildContent>
                                    <HorseLegTypeStats Title="Leg Types" />
                                </ChildContent>
                                <ErrorContent>
                                    <ErrorWidget ErrorMessage="An unexpected error occurred in the Leg Type Stats widget." />
                                </ErrorContent>
                            </ErrorBoundary>
                        </FluentCard>
                    </FluentGridItem>
                    <FluentGridItem xs="12" sm="6" md="6">
                        <FluentCard Height="270px;">
                            <ErrorBoundary>
                                <ChildContent>
                                    <MessageRequestWidget Title="Message Queue" />
                                </ChildContent>
                                <ErrorContent>
                                    <ErrorWidget ErrorMessage="An unexpected error occurred in the Message Queue widget." />
                                </ErrorContent>
                            </ErrorBoundary>
                        </FluentCard>
                    </FluentGridItem>
                </FluentGrid>
            </FluentGridItem>
        </FluentGrid>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6">
        <FluentCard Style="height: 100%">
            <ErrorBoundary>
                <ChildContent>
                    <HorseColorStats Title="Horse Colors" MaxItems="6" />
                </ChildContent>
                <ErrorContent>
                    <ErrorWidget ErrorMessage="An unexpected error occurred in the Color Stats widget." />
                </ErrorContent>
            </ErrorBoundary>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6" md="3">
        <FluentCard Style="height: 150px;">
            <FluentNavLink Href="feedings">
                <FluentLabel Typo="Typography.H2">
                    <FluentEmoji Value="@(new Emojis.FoodDrink.Color.Default.Carrot())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Feedings</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6" md="3">
        <FluentCard Style="height: 150px;">
            <FluentNavLink Href="tracks">
                <FluentLabel Typo="Typography.H2">
                    <FluentIcon Value="@(new RaceTrackIcon())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Tracks</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6" md="3">
        <FluentCard Style="height: 150px;">
            <FluentNavLink Href="trainings">
                <FluentLabel Typo="Typography.H2">
                    <FluentIcon Value="@(new Icons.Regular.Size20.Timer10())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Trainings</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
    <FluentGridItem xs="12" sm="6" md="3">
        <FluentCard Style="height: 150px;">
            <FluentNavLink Href="races">
                <FluentLabel Typo="Typography.H2">
                    <FluentIcon Value="@(new HorseAndRider())" />
                </FluentLabel>
                <FluentLabel Typo="Typography.H4">Races</FluentLabel>
            </FluentNavLink>
        </FluentCard>
    </FluentGridItem>
</FluentGrid>